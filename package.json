{
  "name": "taroify",
  "version": "0.0.2-alpha.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "develop": "gulp develop",
    "watch": "gulp watch",
    "build": "gulp build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint packages --fix --ext .ts,.tsx",
    "stylelint": "stylelint packages/**/*.scss --fix --color --syntax scss",
    "clean": "gulp clean"
  },
  "workspaces": [
    "packages/*",
    "bundles/*"
  ],
  "browserslist": [
    "last 3 versions",
    "Android >= 4.1",
    "ios >= 8"
  ],
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,scss}": "prettier --write",
    "*.{ts,tsx,js}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  },
  "devDependencies": {
    "@taroify/cli": "^0.0.1-alpha.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "cross-env": "^7.0.3",
    "lerna": "^3.22.1",
    "typescript": "^4.2.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0"
  }
}
